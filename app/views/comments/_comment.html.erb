<div class="alert alert-success">
    <h1 class="title">
        <%= comment.name %>
    </h1>
    <p class="date">
        <p><%=comment.body%></p>
        Submitted <%= time_ago_in_words(comment.created_at) %> ago
        <% if user_signed_in? %>
            | <%= link_to "Delete", [comment.post, comment] ,method: :delete ,data: { confirm: 'Are you sure?' } %>
        <%end%>
    </p>
</div>