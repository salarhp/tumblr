<h1>make somthing</h1>
<div class="form-group">
    <%= form_for :post, url: posts_path do |f| %>
        <p>
            <%= f.label :title %><br>
            <%= f.text_field :title ,class:"form-control" %>
        </p>
        <p>
            <%= f.label :body %><br>
            <%= f.text_area :body ,class:"form-control" %>
        </p>
        <p >
            <%= f.submit "submit", class:'btn btn-primary' %>
        </p>

    <% end %>
</div>